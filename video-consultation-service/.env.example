# Video Consultation Service Configuration

# Application Settings
APP_NAME=Video Consultation Service
VERSION=1.0.0
DEBUG=True
PORT=8086
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:root2004@localhost:5432/videodb
DB_HOST=localhost
DB_PORT=5432
DB_NAME=videodb
DB_USER=postgres
DB_PASSWORD=root2004

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=appointments-exchange

# JWT Configuration (REQUIRED)
# Use the same secret as your auth-service
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Service URLs
AUTH_SERVICE_URL=http://localhost:8080
PROFILE_SERVICE_URL=http://localhost:8082
APPOINTMENTS_SERVICE_URL=http://localhost:8083
API_URL=http://localhost:8086

# Video Consultation Settings
DEFAULT_CONSULTATION_DURATION_MINUTES=30
MAX_CONSULTATION_DURATION_MINUTES=120
MIN_CONSULTATION_DURATION_MINUTES=15

# WebRTC Configuration
ENABLE_USAGE_TRACKING=True
MAX_PARTICIPANTS_PER_ROOM=2
ENABLE_RECORDING=False

# STUN/TURN Servers (Optional - for better NAT traversal)
STUN_SERVER=stun:stun.l.google.com:19302
