# Example environment file for auth-service
# Copy to .env and fill with your values. Do NOT commit real secrets.

# Core service
PORT=8080
POSTGRES_DSN=user=postgres password=postgres host=auth-postgres-db port=5432 dbname=authdb sslmode=disable
JWT_SECRET=change_me_to_a_long_random_secret

# Email verification using Gmail SMTP (App Password required)
GMAIL_SMTP_EMAIL=your_gmail_address@gmail.com
GMAIL_SMTP_APP_PASSWORD=your_16_char_app_password
EMAIL_FROM_NAME=PulseOne

# Public base URL used in verification links (no trailing slash)
# Example for local dev: http://localhost:8000
# Example for prod: https://auth.example.com
AUTH_PUBLIC_BASE_URL=http://localhost:8000

# Frontend base URL for password reset links (no trailing slash)
# Example for local dev: http://localhost:3000
# Example for prod: https://pulseone.com
FRONTEND_BASE_URL=http://localhost:3000
